<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.fraga.trabalho_03.CadastrarActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Ponto Turistico"
        android:id="@+id/edtTitulo"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:hint="Descricao do Lugar"
        android:id="@+id/edtDescricao"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Onde Estou ?"
        android:onClick="ondeEstou"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Latitude"
        android:id="@+id/txtLat"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Longitude"
        android:id="@+id/txtLon"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pegar o EndereÃ§o"
        android:onClick="endereco"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEnd"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver no Mapa"
        android:onClick="mapa"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar onde Estou"
        android:onClick="salvarPonto"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listar Pontos Turisticos"
        android:onClick="listarPontos"/>

</LinearLayout>
